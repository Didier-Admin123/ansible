input {
  beats {
    port => 5044
  }
}

filter {
  if [type] == "syslog" {
     grok {
        match => { "message" => "%{SYSLOGLINE}" }
  }
     date {
        match => [ "timestamp", "MMM  d HH:mm:ss", "MMM dd HH:mm:ss" ]
     }
  }
}

{% for item in groups['elasticsearch_servers'] %}

output {
  elasticsearch {
    hosts => ["{{ hostvars[item].ansible_host }}:9200"]
    index => "%{[@metadata][beat]}-%{+YYYY.MM.dd}"
  }}

{% endfor %}
